@model  List<Pipelines.Data.Models.Board>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/_Layout.cshtml";
}

<ul class="list-group" id="board-list" style="text-align: center; margin: 0 auto 70px auto; width: 80%;">
    @foreach (var board in @Model)
    {
        <li class="list-group-item">@Html.ActionLink(@board.Name, "Index", "Board", new { name = @board.Name }, null)</li>
    }
    <li class="list-group-item"><a style="cursor:pointer; font-weight:bold" id="create-new-board">Create New Board</a></li>
</ul>

<div class="modal fade" id="create-board-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Create Board</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="create-board-form" method="post">
                    <div class="form-group">
                        <label for="new-board-name" class="col-lg-2 control-label">Name</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="new-board-name" name="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Stages</label>
                        <div class="col-lg-10">
                            <input type="text" id="stages" class="form-control" data-role="tagsinput">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Pipelines</label>
                        <div class="col-lg-10">
                            <input type="text" id="pipelines" class="form-control" data-role="tagsinput">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="save-new-board-button" type="button" class="btn btn-primary" data-role="form-submit">Save</button>
            </div>
        </div>
    </div>
</div>



